<h1>New Book</h1>

<%= form_with model: @book, local: true do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :pub_year %>
        <%= f.text_field :pub_year %>
    </div>
    <div>
        <%= f.label :author_id %>
        <%= f.text_field :author_id %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>
